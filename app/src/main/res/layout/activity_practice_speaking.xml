<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeSpeaking">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/practiceSpeakingBoard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/practiceListeningBoardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFCC80"
                android:padding="30dp"
                android:text="Practice and Develop Your Speaking Skill"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/listeningPracticeHero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Read the following"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/practiceSpeakingInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:ems="10"
                android:hint="Empty"
                android:inputType="text"
                android:minHeight="100dp" />

            <TextView
                android:id="@+id/practiceListeningOutputTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="You say..."
                android:textSize="25sp" />

            <EditText
                android:id="@+id/practiceListeningOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Say something..."
                android:inputType="text"
                android:minHeight="100dp" />

            <TextView
                android:id="@+id/practiceListeningStatusTitle"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="#0CFFCC80"
                android:foregroundTint="#329ACA"
                android:text="Your speaking Status"
                android:textColor="#81D4FA"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/practiceListeningStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Empty"
                android:inputType="text"
                android:maxHeight="150dp"
                android:minHeight="100dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>